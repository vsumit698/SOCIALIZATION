<link rel="stylesheet" href="/css/home.css">
<div id="home">
    <h1> Welcome To Socialization </h1>
    <% if(locals.user){ %>
        <h2> Hey <%= user.name %> </h2>

        <h4>Create Post</h4>
        <form action="/user/post" method="POST">
            <textarea name="content" cols="30" rows="5" placeholder="Write your post"></textarea>
            <button type="submit">POST</button>
        </form>
        <h4>YourPost</h4>

        <ol type="1">
            <% for(var post of userPost)  {%>
                <li>
                    <div> <%= post.content %>  </div>
                    <div>Created At - <%= post.createdAt %>  </div>
                </li>
                <hr>
            <% } %>
        </ol>
       

    <% } %>
    
</div>
